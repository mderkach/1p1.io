{% if lot.isAviable == true and lot.isBookmarked == false %}
  <div class="lot__bet--place-input-outer">
    <label class="lot__bet--place-input-label" for="bet">Ваша ставка (шаг
      {{ lot.bet.step }}
      {{ lot.bet.priceTag }})</label>
    <input name="bet" id="bet" type="number" min="{{ lot.bet.start|number_format(0,'','') }}" data-minimum="{{ lot.bet.start|number_format(0,'','') }}" value="{{ lot.bet.current|number_format(0,'','') + lot.bet.step }}" step="{{ lot.bet.step }}" data-step="{{ lot.bet.step }}" class="lot__bet--place-input">
    <p class="lot__bet--place--error">Ваша ставка должна быть выше, чем самая высокая ставка</p>
  </div>
  <div class="lot__bet-buttons-wrapper">
    <a class="btn-lot-place" href="#">Сделать ставку</a>
    <button class="btn-lot-fav" data-modal="#bookmark-sucess">
      <svg height="24px" version="1.1" viewbox="0 0 24 24" width="24px" xmlns:xlink="http://www.w3.org/1999/xlink" xmlns="http://www.w3.org/2000/svg">title>
        <g fill-rule="evenodd" fill="none" stroke-width="1" stroke="none">
          <g fill-rule="nonzero" fill="#4489FF">
            <path d="M16.5,3 C14.76,3 13.09,3.81 12,5.09 C10.91,3.81 9.24,3 7.5,3 C4.42,3 2,5.42 2,8.5 C2,12.28 5.4,15.36 10.55,20.04 L12,21.35 L13.45,20.03 C18.6,15.36 22,12.28 22,8.5 C22,5.42 19.58,3 16.5,3 Z M12.1,18.55 L12,18.65 L11.9,18.55 C7.14,14.24 4,11.39 4,8.5 C4,6.5 5.5,5 7.5,5 C9.04,5 10.54,5.99 11.07,7.36 L12.94,7.36 C13.46,5.99 14.96,5 16.5,5 C18.5,5 20,6.5 20,8.5 C20,11.39 16.86,14.24 12.1,18.55 Z" id="Shape"></path>
          </g>
        </g>
      </svg>
    </button>
  </div>
{% elseif lot.isAviable == false and lot.isBookmarked == false %}
  <div class="lot__solded">
    Товар продан
  </div>
{% endif %}
