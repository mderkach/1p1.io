{% macro inputCreateDoubleSelectMini(label, firstSelectName, firstSelectPlaceholder, firstSelectOpts, secondSelectName, secondSelectPlaceholder, secondSelectOpts, inputType, inputName, inputPlaceholder ) %}
<div class="inline-inputs">
  <label for="{{ inputName }}" class="form__popup-label">{{ label }}</label>
  <div class="form__popup-input-container">
    <div class="form__popup-select-outer_location">
      <select class="form__popup-select" name="{{ firstSelectName }}" required>
        <option value="" disabled selected hidden>{{ firstSelectPlaceholder }}</option>
        {% for key in firstSelectOpts %}
        <option value="{{ key.key }}">{{ key.value }}</option>
        {% endfor %}
      </select>
      <img class="form__popup-chevronSelect" src="/assets/img/icons/icon-chevron-down.svg" alt="">
    </div>
    <div class="form__popup-select-outer_location">
      <select class="form__popup-select" name="{{ secondSelectName }}" required>
        <option value="" disabled selected hidden>{{ secondSelectPlaceholder }}</option>
        {% for key in secondSelectOpts %}
        <option value="{{ key.key }}">{{ key.value }}</option>
        {% endfor %}
      </select>
      <img class="form__popup-chevronSelect" src="/assets/img/icons/icon-chevron-down.svg" alt="">
    </div>
    <input type="{{ inputType }}" name="{{ inputName }}" class="form__popup-input-create --solo-mobile" id="{{ inputName }}"
      onfocus="this.placeholder = ''" onblur="this.placeholder = '{{ inputPlaceholder }}'"
      placeholder="{{ inputPlaceholder }}" required>
  </div>
</div>
{% endmacro %}