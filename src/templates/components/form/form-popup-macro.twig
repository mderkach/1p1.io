{% macro inputRegistration(name, type, label, placeholder, error) %}
<div class="inline-inputs">
  <label for="{{ name }}" class="form__popup-label">{{ label }}</label>
  <div class="form__popup-input-wrapper">
    <input type="{{ type }}" name="{{ name }}" class="form__popup-input" id="{{ name }}" onfocus="this.placeholder = ''"
      onblur="this.placeholder = '{{ placeholder }}'" placeholder="{{ placeholder }}" required>
    <div class="not-valid">{{ error }}</div>
  </div>
</div>
{% endmacro %}

{% macro checkboxRegistration(name, text, error) %}
<div class="inline-inputs">
  <label for="" class="form__popup-label"></label>
  <div class="form__popup-input-wrapper">
    <input class="form__popup-input-checkbox" type="checkbox" id="{{ name }}" name="{{ name }}" required checked>
    <label for="{{ name }}" class="form__popup-label-checkbox">{{ text }}</label>
    <div class="not-valid">{{ error }}</div>
  </div>
</div>
{% endmacro %}

{% macro submitRegistration(value) %}
<div class="inline-inputs">
  <label for="" class="form__popup-label"></label>
  <div class="form__popup-input-wrapper">
    <input class="form__popup-submit" type="submit" value="{{ value }}">
  </div>
</div>
{% endmacro %}

{% macro loginButtons() %}
<div class="inline-inputs">
  <label for="" class="form__popup-label"></label>
  <div class="form__popup-input-wrapper form__popup-login-anchors">
    <a class="form__popup-login-anchor" href="#">Забыли пароль?</a>
    <a class="form__popup-login-anchor popup--toggle" data-modal="registration" href="#">Регистрация</a>
  </div>
</div>
{% endmacro %}

{% macro textarea(name, label, tip, tooltipTrigger) %}
<div class="inline-inputs">
  <label for="{{ name }}" class="form__popup-label-sell">{{ label }}</label>
  <div class="form__popup-textarea-wrapper">
    <textarea class="form__popup-textarea" rows="1" name="{{ name }}"></textarea>
    <div class="form__popup-tip__wrapper">
      <p class="form__popup-tip">
        {{ tip }}
      </p>
      <a class="form__popup-tip-trigger" href="javascript:void();"> {{ tooltipTrigger}} </a>
    </div>
  </div>
</div>
{% endmacro %}

{% macro selectSimple(name, label, options) %}
<div class="inline-inputs">
  <label for="{{ name }}" class="form__popup-label">{{ label }}</label>
  <div class="form__popup-selectSimple-wrapper">
    <select class="form__popup-selectSimple" name="{{ name }}">
      {% for key in options %}
      <option value="{{ key.key }}" {{ key.selected == true ? 'selected' : '' }}>{{ key.value }}</option>
      {% endfor %}
    </select>
    <img class="form__popup-chevronSelect" src="/assets/img/icons/icon-chevron-down.svg" alt="">
  </div>
</div>
{% endmacro %}

{% macro selectMiniDual(label, firstSelectName, priceType, inputNumberName, priceValue) %}
<div class="inline-inputs">
  <label for="" class="form__popup-label">{{ label }}</label>
  <div class="form__popup-selectMini-container">
    <div class="form__popup-selectMini-outer">
      <label class="form__popup-selectMini-outer-label" for="{{ firstSelectName }}">{{ firstSelectName }}</label>
      <div class="form__popup-selectMini-wrapper">
        <select class="form__popup-selectMini" name="{{ firstSelectName }}">
          {% for key in priceType %}
          <option value="{{ key.key }}" {{ key.selected == true ? 'selected' : '' }}> {{ key.value }}</option>
          {% endfor %}
        </select>
        <img class="form__popup-chevronSelect" src="/assets/img/icons/icon-chevron-down.svg" alt="">
      </div>
    </div>
    <div class="form__popup-inputNumberMini-outer">
      <label class="form__popup-inputNumberMini-outer-label" for="{{ inputNumberName }}">{{ inputNumberName }}</label>
      <div class="form__popup-inputNumberMini-wrapper">
        <input class="form__popup-inputNumberMini" data-type="number" type="number" min="1" name="{{ inputNumberName }}"
          value="{{ priceValue }}">
        <div class="form__popup-inputNumberMini-controls-wrapper">
          <button data-action="increase" type="button" class="form__popup-inputNumberMini-controls">
            <img src="/assets/img/icons/icon-button-inputNumber-control.svg" alt="">
          </button>
          <button data-action="decrease" type="button" class="form__popup-inputNumberMini-controls">
            <img src="/assets/img/icons/icon-button-inputNumber-control.svg" alt="">
          </button>
        </div>
      </div>
    </div>
  </div>
</div>
{% endmacro %}

{% macro selectSimpleDual(name, label, donation, donateValue) %}
<div class="inline-inputs">
  <label for="{{ name }}" class="form__popup-label">{{ label }}</label>
  <div class="form__popup-input-container">
    <div class="form__popup-select-outer">
      <select class="form__popup-select" name="{{ name }}" required>
        <option value="" disabled selected hidden>Donate to</option>
        {% for key in donation %}
        <option value="{{ key.key }}">{{ key.value }}</option>
        {% endfor %}
      </select>
      <img class="form__popup-chevronSelect" src="/assets/img/icons/icon-chevron-down.svg" alt="">
    </div>
    <div class="form__popup-inputNumberMini-outer">
      <label class="form__popup-inputNumberMini-outer-label" for="{{ inputNumberName }}">{{ inputNumberName }}</label>
      <div class="form__popup-inputNumberMini-wrapper">
        <input class="form__popup-inputNumberMini" data-type="percent" type="number" min="1" max="99"
          name="{{ inputNumberName }}" value="{{ donateValue }}">
        <div class="form__popup-inputNumberMini-controls-wrapper">
          <button data-action="increase" type="button" class="form__popup-inputNumberMini-controls">
            <img src="/assets/img/icons/icon-button-inputNumber-control.svg" alt="">
          </button>
          <button data-action="decrease" type="button" class="form__popup-inputNumberMini-controls">
            <img src="/assets/img/icons/icon-button-inputNumber-control.svg" alt="">
          </button>
        </div>
        <span class="form__popup-inputNumberMini-span">%</span>
      </div>
    </div>
  </div>
</div>
{% endmacro %}

{% macro photos(label) %}
<div class="inline-inputs">
  <label for="" class="form__popup-label-sell">{{ label }}</label>
  <div class="form__popup-input-wrapper">
    <div class="form__popup-upload-photo" id="uploader">
      <img src="/assets/img/icons/icon-camera.svg" alt="">
      Click to upload or drag from your computer
    </div>
  </div>
</div>
<script type="text/template" id="qq-template-gallery">
  <div class="qq-uploader-selector qq-uploader qq-gallery" qq-drop-area-text="Drop files here">
      <div class="qq-total-progress-bar-container-selector qq-total-progress-bar-container">
          <div role="progressbar" aria-valuenow="0" aria-valuemin="0" aria-valuemax="100" class="qq-total-progress-bar-selector qq-progress-bar qq-total-progress-bar"></div>
      </div>
      <div class="qq-upload-drop-area-selector qq-upload-drop-area" qq-hide-dropzone>
          <span class="qq-upload-drop-area-text-selector"></span>
      </div>
      <div class="qq-upload-button-selector qq-upload-button">
          <div>Upload a file</div>
      </div>
      <span class="qq-drop-processing-selector qq-drop-processing">
          <span>Processing dropped files...</span>
          <span class="qq-drop-processing-spinner-selector qq-drop-processing-spinner"></span>
      </span>
      <ul class="qq-upload-list-selector qq-upload-list" role="region" aria-live="polite" aria-relevant="additions removals">
          <li>
              <span role="status" class="qq-upload-status-text-selector qq-upload-status-text"></span>
              <div class="qq-progress-bar-container-selector qq-progress-bar-container">
                  <div role="progressbar" aria-valuenow="0" aria-valuemin="0" aria-valuemax="100" class="qq-progress-bar-selector qq-progress-bar"></div>
              </div>
              <span class="qq-upload-spinner-selector qq-upload-spinner"></span>
              <div class="qq-thumbnail-wrapper">
                  <img class="qq-thumbnail-selector" qq-max-size="120" qq-server-scale>
              </div>
              <button type="button" class="qq-upload-cancel-selector qq-upload-cancel">X</button>
              <button type="button" class="qq-upload-retry-selector qq-upload-retry">
                  <span class="qq-btn qq-retry-icon" aria-label="Retry"></span>
                  Retry
              </button>

              <div class="qq-file-info">
                  <div class="qq-file-name">
                      <span class="qq-upload-file-selector qq-upload-file"></span>
                      <span class="qq-edit-filename-icon-selector qq-edit-filename-icon" aria-label="Edit filename"></span>
                  </div>
                  <input class="qq-edit-filename-selector qq-edit-filename" tabindex="0" type="text">
                  <span class="qq-upload-size-selector qq-upload-size"></span>
                  <button type="button" class="qq-btn qq-upload-delete-selector qq-upload-delete">
                      <span class="qq-btn qq-delete-icon" aria-label="Delete"></span>
                  </button>
                  <button type="button" class="qq-btn qq-upload-pause-selector qq-upload-pause">
                      <span class="qq-btn qq-pause-icon" aria-label="Pause"></span>
                  </button>
                  <button type="button" class="qq-btn qq-upload-continue-selector qq-upload-continue">
                      <span class="qq-btn qq-continue-icon" aria-label="Continue"></span>
                  </button>
              </div>
          </li>
      </ul>

      <dialog class="qq-alert-dialog-selector">
          <div class="qq-dialog-message-selector"></div>
          <div class="qq-dialog-buttons">
              <button type="button" class="qq-cancel-button-selector">Close</button>
          </div>
      </dialog>

      <dialog class="qq-confirm-dialog-selector">
          <div class="qq-dialog-message-selector"></div>
          <div class="qq-dialog-buttons">
              <button type="button" class="qq-cancel-button-selector">No</button>
              <button type="button" class="qq-ok-button-selector">Yes</button>
          </div>
      </dialog>

      <dialog class="qq-prompt-dialog-selector">
          <div class="qq-dialog-message-selector"></div>
          <input type="text">
          <div class="qq-dialog-buttons">
              <button type="button" class="qq-cancel-button-selector">Cancel</button>
              <button type="button" class="qq-ok-button-selector">Ok</button>
          </div>
      </dialog>
  </div>
</script>
{% endmacro %}