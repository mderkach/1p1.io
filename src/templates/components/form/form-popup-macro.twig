</div>
{% endmacro %}

{% macro textarea(name, label, tip, tooltipTrigger, tooltipDescr) %}
<div class="inline-inputs">
  <label for="{{ name }}" class="form__popup-label-sell">{{ label }}</label>
  <div class="form__popup-textarea-wrapper">
    <textarea class="form__popup-textarea" rows="1" name="{{ name }}"></textarea>
    <div class="form__popup-tip__wrapper">
      <p class="form__popup-tip">
        {{ tip }}
      </p>
      <a class="form__popup-tip-trigger tooltip-trigger" href="#"> {{ tooltipTrigger}} </a>
      {% include "../tooltip/tooltip-form-popup.twig" %}
    </div>
  </div>
</div>
{% endmacro %}

{% macro selectSimple(name, label, options) %}
<div class="inline-inputs">
  <label for="{{ name }}" class="form__popup-label">{{ label }}</label>
  <div class="form__popup-selectSimple-wrapper">
    <select class="form__popup-selectSimple" name="{{ name }}">
      {% for key in options %}
      <option value="{{ key.key }}" {{ key.selected == true ? 'selected' : '' }}>{{ key.value }}</option>
      {% endfor %}
    </select>
    <img class="form__popup-chevronSelect" src="/assets/img/icons/icon-chevron-down.svg" alt="">
  </div>
</div>
{% endmacro %}

{% macro selectMiniTrio(label, firstSelectName, priceType, startingPriceName, startingPriceValue, buyoutPriceName, buyoutPriceValue) %}
<div class="inline-inputs">
  <label for="" class="form__popup-label">{{ label }}</label>
  <div class="form__popup-selectMini-container">
    <div class="form__popup-selectMini-outer">
      <label class="form__popup-selectMini-outer-label" for="{{ firstSelectName }}">{{ firstSelectName }}</label>
      <div class="form__popup-selectMini-wrapper">
        <select class="form__popup-selectMini" name="{{ firstSelectName }}">
          {% for key in priceType %}
          <option value="{{ key.key }}" {{ key.selected == true ? 'selected' : '' }}> {{ key.value }}</option>
          {% endfor %}
        </select>
        <img class="form__popup-chevronSelect" src="/assets/img/icons/icon-chevron-down.svg" alt="">
      </div>
    </div>
    <div class="form__popup-inputNumberMini-outer">
      <label class="form__popup-inputNumberMini-outer-label"
        for="{{ startingPriceName }}">{{ startingPriceName }}</label>
      <div class="form__popup-inputNumberMini-wrapper">
        <input class="form__popup-inputNumberMini inputNumberMini" data-type="number" type="number" min="1"
          name="{{ startingPriceName }}" value="{{ startingPriceValue }}">
        <div class="form__popup-inputNumberMini-controls-wrapper">
          <button data-action="increase" type="button" class="form__popup-inputNumberMini-controls inputNumberMini-controls">
            <img src="/assets/img/icons/icon-button-inputNumber-control.svg" alt="">
          </button>
          <button data-action="decrease" type="button" class="form__popup-inputNumberMini-controls inputNumberMini-controls">
            <img src="/assets/img/icons/icon-button-inputNumber-control.svg" alt="">
          </button>
        </div>
      </div>
    </div>
    <div class="form__popup-inputNumberMini-outer">
      <label class="form__popup-inputNumberMini-outer-label" for="{{ buyoutPriceName }}">{{ buyoutPriceName }}</label>
      <div class="form__popup-inputNumberMini-wrapper">
        <input class="form__popup-inputNumberMini inputNumberMini" data-type="number" type="number" min="1" name="{{ buyoutPriceName }}"
          value="{{ buyoutPriceValue }}">
        <div class="form__popup-inputNumberMini-controls-wrapper">
          <button data-action="increase" type="button" class="form__popup-inputNumberMini-controls inputNumberMini-controls">
            <img src="/assets/img/icons/icon-button-inputNumber-control.svg" alt="">
          </button>
          <button data-action="decrease" type="button" class="form__popup-inputNumberMini-controls inputNumberMini-controls">
            <img src="/assets/img/icons/icon-button-inputNumber-control.svg" alt="">
          </button>
        </div>
      </div>
    </div>
  </div>
</div>
{% endmacro %}

