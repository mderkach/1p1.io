<form action="#" class="form__popup-sell-fieldset-wrapper">
  {% block usetSeeting %}
  <fieldset class="profile-settings-fieldset">
    <h3 class="popup-edit-header">Настройки профиля</h3>
    {{ inputs.inputRegistration('name', 'text', 'Имя', 'Ваше имя', ' ' ) }}
    {{ inputs.inputRegistration('surname', 'text', 'Фамилия', 'Ваша Фамилия', ' ' ) }}
    {{ inputs.inputRegistration('birthday', 'text', 'Дата рождения', 'ДД.ММ.ГГГГ', ' ' ) }}
    <div class="inline-inputs">
      <label for="gender" class="form__popup-label">Пол</label>
      <div class="form__popup-input-wrapper">
        <label class="profile-settings-input-radio-label" for="radio-gender-male">
          <input class="profile-settings-input-radio" id="radio-gender-male" name="radio-gender" type="radio">
          Мужской
          <span class="profile-settings-input-radio-checkmark"></span>
        </label>
        <label class="profile-settings-input-radio-label" for="radio-gender-female">
          <input class="profile-settings-input-radio" id="radio-gender-female" name="radio-gender" type="radio">
          Женский
          <span class="profile-settings-input-radio-checkmark"></span>
        </label>
      </div>
    </div>
    {{ inputs.inputRegistration('phone', 'tel', 'Номер телефона', '+7 ( ) - - -', ' ' ) }}
  </fieldset>
  {% endblock %}
  {% block sellerSettings %}
  <fieldset class="profile-settings-fieldset">
    <h3 class="popup-edit-header">Данные продавца</h3>
    {{ inputs.inputRegistration('contact-name', 'text', 'Контактное лицо', 'Введите имя', ' ' ) }}
    {{ inputs.inputRegistration('contact-phone', 'tel', 'Номер телефона', '+7 ( ) - - -', ' ' ) }}
    <div class="inline-inputs">
      <label for="place" class="form__popup-label">Местонахождение</label>
      <div class="form__popup-input-wrapper">
        <div class="profile-settings-input-wrapper-mini">
          <input type="text" name="ZIP" class="form__popup-input" id="ZIP" onfocus="this.placeholder = ''"
            onblur="this.placeholder = 'Индекс'" placeholder="Индекс" required>
        </div>
        <div class="profile-settings-input-wrapper-mini">
          <select class="form__popup-select" name="region" required>
            <option disabled selected hidden value="">Область</option>
            <option value="рас">рас</option>
          </select>
          <img class="form__popup-chevronSelect" src="/assets/img/icons/icon-chevron-down.svg" alt="">
        </div>
        <input type="text" name="city" class="form__popup-input" id="city" onfocus="this.placeholder = ''"
          onblur="this.placeholder = 'Город'" placeholder="Город" required>
      </div>
    </div>
    {{ inputs.inputRegistration('contact-address', 'text', 'Адрес', 'Введите адрес', ' ' ) }}
  </fieldset>
  {% endblock %}
  {% block daefaultFunds %}
  <fieldset class="profile-settings-fieldset">
    <h3 class="popup-edit-header">Благотворительный проект по умолчанию</h3>
    {% set optsFunds = [
                { 
                  key: 'адын',
                  value: 'адын',
                  selected: true,
                },
                { 
                  key: 'рас',
                  value: 'рас',
                  selected: false,
                },
                ],
              %}
    {{ inputs.selectSimple('defaultFund','Фонд', optsFunds) }}
  </fieldset>
  {% endblock %}
  {% block controls %}
  {% endblock %}
</form>