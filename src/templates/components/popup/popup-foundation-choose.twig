<div class="popup-edit__background popup--target" id="choose-fund">
  <div class="popup-foundation-choose__wrapper">
    <form class="popup-foundation-choose">
      <div class="popup-foundation-choose__inner">
        <h3 class="popup-edit-header">Благотворительный фонд</h3>
        <div class="popup-foundation-choose__cards">
          {% if foundations %}
            {% for item in foundations %}
              {# loop.index замените на необходиимую инфу!!!!!! #}
              <label class="popup-foundation-choose__label" for="foundation-{{ loop.index }}">
                <input class="popup-foundation-choose__checkbox" id="foundation-{{ loop.index }}" name="foundation" type="radio">
                <div class="card-foundation">
                  <div class="card-foundation-head">
                    <a class="card-foundation-img__wrapper" href="{{ item.link }}">
                      <img alt="" class="card-foundation-img" src="{{ item.img }}">
                      <a class="card-foundation-name" href="{{ item.link }}">{{ item.name }}</a>
                    </a>
                  </div>
                  <div class="card-foundation-body">
                    <p class="card-foundation-descr">{{ item.descr}}</p>
                    <p class="card-foundation-place">{{ item.place }}</p>
                  </div>
                </div>
              </label>
            {% endfor %}
          {% endif %}
        </div>
      </div>
      <div class="popup-foundation-choose__footer">
        <a class="popup-edit-reset btn--close-popup" data-modal="choose-fund" href="#choose-fund">Отменить</a>
        <input class="popup-edit-submit" type="submit" value="Выбрать">
      </div>
    </form>
  </div>
</div>

